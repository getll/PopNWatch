<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity"
    tools:ignore="SpeakableTextPresentCheck">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/payButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFF7F"
            android:text="Pay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalTextView"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/cardNameEditText3"
            android:layout_width="281dp"
            android:layout_height="47dp"
            android:layout_marginTop="32dp"
            android:background="#99FFFF7F"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expirationDateEditText2" />

        <TextView
            android:id="@+id/emailTextView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Under Card"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/cardNameEditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.216"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/expirationDateEditText2"
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:layout_marginTop="32dp"
            android:background="#99FFFF7F"
            android:ems="10"

            android:inputType="date"
            app:layout_constraintEnd_toEndOf="@+id/cardNameEditText"
            app:layout_constraintTop_toBottomOf="@+id/cardNameEditText" />

        <TextView
            android:id="@+id/emailTextView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CCV"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/expirationDateEditText2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/expirationDateEditText"
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:layout_marginTop="32dp"
            android:background="#99FFFF7F"
            android:ems="10"
            android:inputType="date"
            android:hint="00/00"
            app:layout_constraintStart_toStartOf="@+id/cardNameEditText"
            app:layout_constraintTop_toBottomOf="@+id/cardNameEditText" />

        <TextView
            android:id="@+id/emailTextView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/cardNameEditText3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.181"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/cardNameEditText"
            android:layout_width="281dp"
            android:layout_height="47dp"
            android:layout_marginTop="32dp"
            android:background="#99FFFF7F"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardNumberEditText" />

        <TextView
            android:id="@+id/emailTextView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Number"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/cardNumberEditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.198"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/titleTextView2"
            android:layout_width="281dp"
            android:layout_height="51dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Checkout"
            android:textColor="#FFFF7F"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/totalTextView"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Total: "
            android:textColor="#FFFF7F"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardNameEditText3" />

        <EditText
            android:id="@+id/cardNumberEditText"
            android:layout_width="281dp"
            android:layout_height="47dp"
            android:layout_marginTop="50dp"
            android:background="#99FFFF7F"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView2" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exp. Date"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/expirationDateEditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.184"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>