<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".EditRecipeActivity">

    <TextView
        android:id="@+id/etaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="4dp"
        android:text="Estimated Time"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/etaEditTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/genreRecipeEditTextView"
        android:layout_width="283dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:background="#99FFFF7F"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etaEditTextView" />

    <TextView
        android:id="@+id/genreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Genre"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/genreRecipeEditTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="8dp"
        android:text="Description"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/descriptionEditTextview"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/updateRecipeButton"
        android:layout_width="141dp"
        android:layout_height="41dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#FFFF7F"
        android:text="Add Recipe"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genreRecipeEditTextView" />

    <EditText
        android:id="@+id/descriptionEditTextview"
        android:layout_width="290dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:background="#99FFFF7F"
        android:ems="10"
        android:inputType="text"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgURLTextPersonName" />

    <EditText
        android:id="@+id/etaEditTextView"
        android:layout_width="283dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:background="#99FFFF7F"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionEditTextview" />

    <EditText
        android:id="@+id/nameRecipeEditTextView"
        android:layout_width="283dp"
        android:layout_height="38dp"
        android:layout_marginTop="136dp"
        android:background="#99FFFF7F"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="8dp"
        android:text="Name"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/nameRecipeEditTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/imgURLTextPersonName"
        android:layout_width="278dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="#99FFFF7F"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameRecipeEditTextView" />

    <TextView
        android:id="@+id/urlTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Image URL"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/imgURLTextPersonName"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>